# Backend Dockerfile
# Multi-stage build for production-ready image

# Stage 1: Build
FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Ensure dev dependencies are installed during build (so tsc is available)
ENV NPM_CONFIG_PRODUCTION=false
RUN npm ci --include=dev && npm install -g typescript

# Generate Prisma client (builder only needs client for tsc; runtime uses debian engine in production stage)
RUN npx prisma generate

# Copy source code
COPY . .

# Build TypeScript
RUN npm run build

# Stage 2: Production
FROM node:20-bullseye-slim AS production

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates libssl1.1 wget \
    && rm -rf /var/lib/apt/lists/*

RUN groupadd -g 1001 nodejs && \
    useradd -u 1001 -g nodejs -s /bin/false nodejs

COPY package*.json ./
COPY prisma ./prisma/

RUN npm ci --only=production

# Prisma client will be generated by the package postinstall step during npm install

# Copy built application from builder stage
COPY --from=builder /app/dist ./dist

# Copy entrypoint script (runs migrations + seed on startup)
COPY docker-entrypoint.sh /app/docker-entrypoint.sh
RUN sed -i 's/\r$//' /app/docker-entrypoint.sh && chmod +x /app/docker-entrypoint.sh

# Set ownership
RUN chown -R nodejs:nodejs /app

# Switch to non-root user
USER nodejs

# Expose port
EXPOSE 5000

# Health check (allow time for migrations on first run)
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=5 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:5000/api/health || exit 1

# Run migrations + seed, then start application
ENTRYPOINT ["/app/docker-entrypoint.sh"]
CMD ["node", "dist/server.js"]

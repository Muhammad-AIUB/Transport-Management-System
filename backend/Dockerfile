# Backend Dockerfile
# Multi-stage build for production-ready image

# Stage 1: Build
FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Ensure dev dependencies are installed during build (so tsc is available)
ENV NPM_CONFIG_PRODUCTION=false
RUN npm ci --include=dev && npm install -g typescript

# Install OpenSSL 1.1 (required by Prisma linux-musl query engine on Alpine)
RUN apk add --no-cache openssl1.1

# Generate Prisma client
RUN npx prisma generate

# Copy source code
COPY . .

# Build TypeScript
RUN npm run build

# Stage 2: Production
# Use Debian-based image so OpenSSL 1.1 is available for Prisma runtime
FROM node:20-bullseye-slim AS production

WORKDIR /app

# Create non-root user for security (Debian-compatible)
RUN groupadd -g 1001 nodejs && \
    useradd -u 1001 -g nodejs -s /bin/false nodejs

# Copy package files
COPY package*.json ./
# Copy Prisma files early so postinstall can access schema
COPY prisma ./prisma/

# Debian base includes OpenSSL 1.1 (libssl) so no extra install is required here

# Install production dependencies only (postinstall will run `npx prisma generate`)
RUN npm ci --only=production

# Prisma client will be generated by the package postinstall step during npm install

# Copy built application from builder stage
COPY --from=builder /app/dist ./dist

# Copy entrypoint script (runs migrations + seed on startup)
COPY docker-entrypoint.sh /app/docker-entrypoint.sh
RUN chmod +x /app/docker-entrypoint.sh

# Set ownership
RUN chown -R nodejs:nodejs /app

# Switch to non-root user
USER nodejs

# Expose port
EXPOSE 5000

# Health check (allow time for migrations on first run)
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=5 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:5000/api/health || exit 1

# Run migrations + seed, then start application
ENTRYPOINT ["/app/docker-entrypoint.sh"]
CMD ["node", "dist/server.js"]
